struct vldbentry {
	char name[VLDB_MAXNAMELEN];
	uint32_t volumeType;		/* currrent unused */
	uint32_t nServers;
	uint32_t serverNumber[MAXNSERVERS];
	uint32_t serverPartition[MAXNSERVERS];
	uint32_t serverFlags[MAXNSERVERS];
	uint32_t volumeId[MAXTYPES];
	uint32_t cloneId;
	uint32_t flags;
};

